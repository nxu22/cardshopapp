<!-- app/views/orders/index.html.erb -->

<h1>My Orders</h1>

<% @orders.each do |order| %>
  <div class="order">
    <h2>Order ##{order.id} - Total: $<%= order.order_items.sum(&:total_price) %></h2>
    <ul>
      <% order.order_items.each do |item| %>
        <li><%= item.quantity %>x <%= item.product.name %> at $<%= item.price %> each</li>
      <% end %>
    </ul>
  </div>
<% end %>
